<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="FlexibleRefactoring.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               class="flexiblerefactoring.actions.SampleAction"
               icon="icons/sample.gif"
               id="flexiblerefactoring.actions.SampleAction"
               label="&amp;Sample Action"
               menubarPath="sampleMenu/sampleGroup"
               style="push"
               toolbarPath="sampleGroup"
               tooltip="Hello, Eclipse world">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="flexiblerefactoring.actions.GetInfo"
            id="FlexibleRefactoring.GetInfo"
            name="GetInfo">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Flexible Refatoring">
            <command
                  commandId="FlexibleRefactoring.GetInfo"
                  label="GetInfor"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.jdt.core.compilationParticipant">
      <compilationParticipant
            class="Reconcile.RefactoringCompilerParticipant"
            id="RefactoringCompilationParticipation">
      </compilationParticipant>
   </extension>

</plugin>
